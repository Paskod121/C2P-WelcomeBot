# Configuration générale
PORT=3000
NODE_ENV=development

# Configuration WhatsApp Business API
WHATSAPP_API_TOKEN=votre_token_whatsapp_business
WHATSAPP_NUMERO_TELEPHONE=votre_numero_telephone

# Configuration Twilio (pour l'intégration WhatsApp)
TWILIO_ACCOUNT_SID=votre_twilio_account_sid
TWILIO_AUTH_TOKEN=votre_twilio_auth_token
TWILIO_WHATSAPP_NUMBER=votre_numero_whatsapp_twilio

# Configuration de la base de données
MONGODB_URI=mongodb://localhost:27017/bot-c2p
REDIS_URI=redis://localhost:6379

# Configuration AWS S3 (pour le stockage des ressources)
AWS_ACCESS_KEY_ID=votre_aws_access_key
AWS_SECRET_ACCESS_KEY=votre_aws_secret_key
AWS_REGION=eu-west-3
AWS_S3_BUCKET=bot-c2p-ressources

# Configuration Claude IA
CLAUDE_API_KEY=votre_claude_api_key

# Configuration N8N (pour les workflows)
N8N_WEBHOOK_URL=http://localhost:5678/webhook